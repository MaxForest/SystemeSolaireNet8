@page "/"
@using SolarSystemN9
@using SolarSystemN9.Client
@using SolarSystemN9.Components
@using SolarSystemN9.Components.Card
@using SolarSystemN9.Components.Table
@using SolarSystemN9.Data
@using SolarSystemN9.Data.Entity

@inherits GalaxyComponent
@attribute [StreamRendering]

<PageTitle>Système Solaire</PageTitle>
<h1>Système Solaire</h1>

<form class="search" data-enhance>
  <input name="query" placeholder="Search..." value="@Query" />
  <button title="Search" class="ms-Icon ms-Icon--Search"></button>
</form>
@if (CelestialBodies == null)
{
  <p><em>Chargement en cours...</em></p>
}
else
{
    <ul class="space-list">
    @foreach (var spaceEntity in CelestialBodies)
    {
        <li class="space-list-item">
            <a href="galaxy/@spaceEntity.Id">
                <SpaceCard Body="spaceEntity" />
            </a>
        </li>
    }
    </ul>
}
